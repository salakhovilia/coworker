generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_COWORKER_CON")
}

model Company {
  id    Int    @id @default(autoincrement())
  name  String
  adminChatId Int
  sources CompanySource[]
}

model CompanySource {
  id    Int    @id @default(autoincrement())
  type String
  name String?
  link String

  company Company @relation(fields: [companyId], references: [id])
  companyId Int

  meta Json?

  @@unique([companyId, link])
}

